@namespace SmallsOnline.Web.PublicSite

@using SmallsOnline.Web.Lib.Models.Blog

@page "/blog/list/{PageNumber:int}"

@if (_isFinishedLoading == false)
{
    <div class="fade-slide-in">
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header">
                        <h1 class="mb-0">
                            Blog
                        </h1>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <LoadingBar />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="fade-slide-in">
        <div class="row pb-2">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header">
                        <div class="mb-0">
                            <h1>
                                Blog
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (_blogEntries is not null && _blogEntries.Entries is not null && _blogEntries.Entries.Count != 0)
    {
        @foreach (BlogListEntry blogEntryItem in _blogEntries.Entries)
        {
            <div class="fade-slide-in">
                <div class="row pb-2">
                    <div class="col">
                        <div class="card shadow">
                            <div class="card-header">
                                <div class="mb-0">
                                    <h1>
                                        @blogEntryItem.Title
                                    </h1>
                                    <div>
                                        <span class="fw-bold">Posted on:</span> <span class="card-subtitle text-muted">@blogEntryItem.PostedDate!.Value.ToLocalTime().ToString("MMMM dd, yyyy hh:mm tt K")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <a class="btn btn-glaucous" role="button" href="/blog/entry/@blogEntryItem.Id">
                                            Open
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="fade-slide-in">
            <div class="row">
                <div class="col">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <p>
                                        No blogs were found.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}