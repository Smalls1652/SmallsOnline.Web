@namespace SmallsOnline.Web.PublicSite.Shared.Navigation

<div class="container pt-4">
    <div class="navbar navbar-dark bg-gunmetal navbar-expand-lg rounded">
        <div class="container">
            <div class="px-2">
                <button class="navbar-toggler" type="button" @onclick="ToggleCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <NavbarLogo />
            </div>
            <CascadingValue Name="Collapsed" Value="@Collapsed">
                <NavbarCollapseSection ToggleChildCollapse="@ChildComponentRequestedCollapse" />
            </CascadingValue>
        </div>
    </div>
</div>