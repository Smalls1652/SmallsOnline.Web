@namespace SmallsOnline.Web.PublicSite.Client
@using SmallsOnline.Web.Lib.Models.Projects

@page "/projects"

<PageTitle>
    Smalls.Online - Projects
</PageTitle>
<HeadContent>
    <meta content="Smalls.Online - Projects" name="title" property="og:title" />
    <meta content="Projects that Tim Small (Smalls) is working or has worked on." property="og:description" />
    <meta content="Tim Small" name="author">
    <meta content="https://smalls.online/projects" property="og:url" />
</HeadContent>
<div class="@(ShouldFadeSlideIn is not null && ShouldFadeSlideIn!.Enabled ? "fade-slide-in" : "")">
    <div class="card shadow">
        <div class="card-header">
            <h1 class="mb-0">
                <i class="bi bi-collection-fill"></i> Projects
            </h1>
        </div>
        <div class="card-body">
            <div class="row pb-3">
                <div class="col">
                    <InfoCard Title="⚠️ Notice">
                        <p>
                            This page is fairly outdated. I'm working on updating this list and will, hopefully, have it
                            updated very soon!
                        </p>
                        <p>
                            If you want to see a list of projects I'm currently working on or have
                            worked on, visit my
                            <a class="link-light" href="https://github.com/smalls1652"
                               rel="noopener noreferrer" target="_blank">
                                GitHub profile
                                <i class="bi bi-github bi-2x"></i>
                            </a>.
                        </p>
                    </InfoCard>
                </div>
            </div>

            @if (_isFinishedLoading == false)
            {
                <div class="row">
                    <div class="col">
                        <LoadingBar />
                    </div>
                </div>
            }
            else
            {
                @foreach (ProjectItem projectItem in _projectItems!)
                {
                    <div class="row">
                        <div class="col pb-4">
                            <ProjectCard Description=@projectItem.Description Name=@projectItem.Name ProjectTypes=@_projectTypes
                                         Type=@projectItem.Type Url=@projectItem.Url UrlIsRepo=@projectItem.UrlIsRepo />
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>