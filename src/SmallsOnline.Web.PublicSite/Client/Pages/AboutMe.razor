@namespace SmallsOnline.Web.PublicSite.Client

@page "/about-me"

<PageTitle>
    Smalls.Online - About me
</PageTitle>
<HeadContent>
    <meta content="Smalls.Online - About Me" name="title" property="og:title" />
    <meta content="The personal website of Timothy Small (Smalls)." property="og:description" />
    <meta content="Tim Small" name="author">
    <meta content="https://smalls.online/about-me" property="og:url" />
</HeadContent>
<div class="@(ShouldFadeSlideIn is not null && ShouldFadeSlideIn!.Enabled ? "fade-slide-in" : "")">
    <div class="card shadow">
        <div class="card-header">
            <h1 class="mb-0">
                <i class="bi bi-person-lines-fill"></i> About Me
            </h1>
        </div>
        <div class="card-body">
            <AboutMeText />
            <AboutMeEducation />
            <AboutMeSkills />
        </div>
    </div>
</div>