        <div class="card-header">
            <h1 class="mb-0">
                <i class="bi bi-person-lines-fill" /> About Me
            </h1>
        </div>
        <div class="card-body">
            <AboutMeText />
            <AboutMeEducation />
            <AboutMeSkills />
        </div>
    </div>
</div>