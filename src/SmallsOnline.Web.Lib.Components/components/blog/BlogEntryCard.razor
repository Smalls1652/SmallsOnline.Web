@namespace SmallsOnline.Web.Lib.Components.Blog

@inherits ComponentBase

<div class="card shadow">
    <div class="card-header">
        <div class="mb-0">
            <h1>
                @BlogEntry!.Title
            </h1>
            <div>
                <span class="fw-bold">Posted on:</span> <span class="card-subtitle text-muted">@BlogEntry.PostedDate.Value.ToLocalTime().ToString("MMMM dd, yyyy hh:mm tt K")</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                @if (BlogEntry.ContentHtml is not null)
                {
                    <div>
                        @((MarkupString)BlogEntry.ContentHtml)
                    </div>
                }
                else
                {
                    <div>
                        Content not set.
                    </div>
                }
            </div>
        </div>
    </div>
</div>