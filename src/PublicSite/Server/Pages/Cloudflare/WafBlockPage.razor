@namespace SmallsOnline.Web.PublicSite.Server.Pages.Cloudflare

@attribute [StreamRendering(false)]

@page "/cloudflare/waf-block"

<HeadContent>
    <!-- Generic meta tags -->
    <PageTitle>
        Smalls.Online - Access Denied
    </PageTitle>
    <meta content="The personal website of Timothy Small (Smalls)." name="description" />
    <meta content="Tim Small" name="author" />

</HeadContent>

<div class="card page-card shadow">
    <div class="card-header page-card-header">
        <h1 class="mb-0">
            <i class="bi bi-dash-circle-fill"></i> Access denied
        </h1>
    </div>
    <div class="card-body page-card-body">
        <div class="row">
            <div class="col">
                <p>
                    Your connection was blocked by the Web Application Firewall (WAF).
                </p>
            </div>
        </div>
        <div class="row pt-2">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                Name
                            </th>
                            <th scope="col">
                                Value
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">
                                IP address
                            </th>
                            <td>
                                <code>
                                    ::CLIENT_IP::
                                </code>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                Ray ID
                            </th>
                            <td>
                                <code>
                                    ::RAY_ID::
                                </code>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
