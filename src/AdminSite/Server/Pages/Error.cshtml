@page "/error/{StatusCode}"
@namespace SmallsOnline.Web.AdminSite.Server.Pages
@model SmallsOnline.Web.AdminSite.Server.Pages.Error
@using SmallsOnline.Web.AdminSite.Server.Shared.Navigation
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <base href="/" />

    <meta charset="utf-8" />

    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />

    <title>Smalls.Online - Not found</title>

    <!-- Theme color attribute. Primarily for theming supported web browsers. -->
    <meta content="#496e9c" name="theme-color" />

    <!-- Twitter Posting Format -->
    <meta content="summary" name="twitter:card" />
    <meta content="@@thetimmysmalls" name="twitter:creator" />

    <!-- OpenGraph Data -->
    <meta content="https://smalls.online/smalls.png" property="og:image" />
    <meta content="en_US" property="og:locale" />

    <link href="favicon.ico" rel="icon" type="image/ico" />

    <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="css/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="css/bootstrap-icons-custom.css" rel="stylesheet" />
    <link href="css/bootstrap-custom.css" rel="stylesheet" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="css/animation/animation.css" rel="stylesheet" />
    <link href="highlight.js/styles/github.min.css" rel="stylesheet" />
    <link href="SmallsOnline.Web.PublicSite.Server.styles.css" rel="stylesheet" />

    <script src="highlight.js/highlight.min.js"></script>
</head>

<body>
<div>
    <header>
        <component render-mode="Static" type="typeof(SiteNavbar)" />
    </header>
    <main>
        <div class="container-xl pb-3">
            <div class="row py-3 justify-content-center">
                <div class="col-12">
                    <div class="card shadow fade-slide-in">
                        <div class="card-header">
                            <h1 class="mb-0">
                                <i class="bi bi-x-circle-fill"></i> @Model.OriginalStatusCode - @Model.StatusCodeMessage
                            </h1>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <p>
                                        Uh-oh! Looks like an error occurred while processing your request.
                                    </p>
                                    @if (Model.OriginalPath is not null)
                                    {
                                        <p>
                                            <strong>Path:</strong> <code>@Model.OriginalPath</code>
                                        </p>
                                    }
                                    @if (Model.ShowRequestId)
                                    {
                                        <p>
                                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="js/bootstrap/bootstrap.bundle.min.js"></script>
</body>
</html>